<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.mycompany.javafxapplication1.FileManagementController" 
      alignment="CENTER" spacing="20" style="-fx-background-color: #2c3e50;">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="File Management" style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" />
    <ListView fx:id="fileListView" prefHeight="400" prefWidth="500"/>
    
    <HBox spacing="15" alignment="CENTER">
        <Button fx:id="addFileBtn" text="Add File" onAction="#handleAddFile"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
        <Button fx:id="updateFileBtn" text="Update File" onAction="#handleUpdateFile"
                style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>
        <Button fx:id="deleteFileBtn" text="Delete File" onAction="#handleDeleteFile"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
        <Button text="Open File" onAction="#handleOpenFile"/>
        <Button text="Back" onAction="#handleBack" 
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px;" />
    </HBox>
</VBox>
