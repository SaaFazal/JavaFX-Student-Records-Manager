<AnchorPane id="AnchorPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.javafxapplication1.RegisterController">
   <children>
      <GridPane alignment="CENTER" prefHeight="700" prefWidth="1000.0" style="-fx-background-color: #2c3e50;" hgap="10" vgap="10">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="200.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="200.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="User name" GridPane.rowIndex="0" GridPane.halignment="RIGHT" style="-fx-text-fill: white;"/>
            <Label text="Password" GridPane.rowIndex="1" GridPane.halignment="RIGHT" style="-fx-text-fill: white;"/>
            <Label text="Re-type password" GridPane.rowIndex="2" GridPane.halignment="RIGHT" style="-fx-text-fill: white;"/>
            <Label text="Select File" GridPane.rowIndex="3" GridPane.halignment="RIGHT" style="-fx-text-fill: white;"/>
            
            <TextField fx:id="userTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="Enter username" />
            <PasswordField fx:id="passPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="Enter password" />
            <PasswordField fx:id="rePassPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="2" promptText="Re-enter password" />
            
            <Button fx:id="selectBtn" mnemonicParsing="false" onAction="#selectBtnHandler" text="Select File" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            
            <Text fx:id="fileText" strokeType="OUTSIDE" strokeWidth="0.0" text="Select File." GridPane.columnIndex="1" GridPane.rowIndex="4" style="-fx-text-fill: white;" />
            
            <Button fx:id="registerBtn" mnemonicParsing="false" onAction="#registerBtnHandler" text="Register" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
            
            <Button fx:id="backLoginBtn" mnemonicParsing="false" onAction="#backLoginBtnHandler" text="Return to Login Page" GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
         </children>
      </GridPane>
      <Label layoutX="272.0" layoutY="94.0" text="Register New User" style="-fx-font-size: 24px; -fx-text-fill: white;" />
   </children>
