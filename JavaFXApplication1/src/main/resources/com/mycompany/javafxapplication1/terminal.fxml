<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Pos?>

<VBox fx:controller="com.mycompany.javafxapplication1.TerminalController" xmlns:fx="http://javafx.com/fxml/1" spacing="10.0" alignment="CENTER">
    <TextArea fx:id="terminalTextArea" prefHeight="200.0" prefWidth="400.0" editable="false"/>
    <TextField fx:id="commandInputField" promptText="Enter command..." prefWidth="400.0"/>
    <Button fx:id="runCommandButton" text="Run Command" onAction="#executeCommand"/>
</VBox>
