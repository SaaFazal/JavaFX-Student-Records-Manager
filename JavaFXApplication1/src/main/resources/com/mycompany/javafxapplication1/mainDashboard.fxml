<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Pos?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.javafxapplication1.MainDashboardController"
      alignment="CENTER" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 30;">
    <Button fx:id="userManagementBtn" text="User Management" onAction="#handleUserManagement"
            style="-fx-font-size: 16; -fx-background-color: #3498db; -fx-text-fill: white; -fx-pref-width: 200;"/>
    <Button fx:id="terminalBtn" text="Terminal" onAction="#handleTerminal"
            style="-fx-font-size: 16; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-pref-width: 200;"/>
    <Button fx:id="fileManagementBtn" text="File Management" onAction="#handleFileManagement"
            style="-fx-font-size: 16; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-pref-width: 200;"/>
</VBox>

