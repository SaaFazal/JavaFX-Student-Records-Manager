<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.javafxapplication1.PrimaryController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
    <children>
        <Label text="User Login" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints minWidth="100.0" />
                <ColumnConstraints minWidth="200.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="30.0" />
                <RowConstraints minHeight="30.0" />
                <RowConstraints minHeight="30.0" />
            </rowConstraints>
            <children>
                <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="userTextField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <PasswordField fx:id="passPasswordField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <HBox alignment="CENTER" spacing="20.0" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2">
    <children>
        <Button fx:id="registerBtn" text="Register" onAction="#registerBtnHandler" />
        <Button fx:id="primaryButton" text="Login" onAction="#switchToSecondary" />
    </children>
</HBox>
            </children>
        </GridPane>
    </children>
</VBox>

